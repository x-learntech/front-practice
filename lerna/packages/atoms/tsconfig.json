{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "jsx": "react",
    "strict": false
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "scripts/*",
    "**/demos"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./typings.d"
  ]
}
